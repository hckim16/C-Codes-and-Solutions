#include <iostream>
#include <string>
#include <vector>

using namespace std;

int findFour(string s){
    
    int count = 0;
    
    vector<string> vec;
    string s1;
    
    for(int i = 0; i < s.length(); i++){
        if(s[i] != ' '){
            s1.push_back(s[i]);
        }
        else if(s[i] == ' '){
            vec.push_back(s1);
            s1 = "";
        }
    }
    for(int i = 0; i < vec.size(); i++){
        if(vec[i].size() == 4)
            count++;
    }
    
    return count;
}



int main() {
    
    string s = "what is going on here with the word count?";
    
    cout << findFour(s);
    
    return 0;
}
